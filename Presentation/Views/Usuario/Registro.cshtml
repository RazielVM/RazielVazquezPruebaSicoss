@model ModelL.Usuario
@{
    ViewBag.Title = "Registro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Registro</h2>

@if (ViewBag.Mensaje != null)
{
    <div class="alert alert-info">
        @ViewBag.Mensaje
    </div>
}

@using (Html.BeginForm("Registro", "Usuario", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="justify-content-center">
        <div class="col d-flex flex-column align-items-center">
            <div>
                @Html.LabelFor(model => model.Nombre)
                @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control" })
            </div>
            <div>
                @Html.LabelFor(model => model.Apellido)
                @Html.TextBoxFor(model => model.Apellido, new { @class = "form-control" })
            </div>
            <div>
                @Html.LabelFor(model => model.UserName, "Nombre de Usuario")
                @Html.TextBoxFor(model => model.UserName, new { @class = "form-control" })
            </div>
            <div>
                @Html.LabelFor(model => model.Password)
                @Html.TextBoxFor(model => model.Password, new { @class = "form-control", @type = "password", @id = "passwordField" })
            </div>
            <div>
                <label>Confirmar Password</label>
                <input class="form-control" type="password" id="confirmPasswordField" />
            </div>
            <span id="message" style="display:none; color:green;"></span>
        </div>
    </div>

    <div class="justify-content-center">
        <div class="mt-3 col d-flex flex-column align-items-center">
            <input type="submit" class="btn btn-success" value="Guardar" />
        </div>
    </div>
}


<script>document.addEventListener('DOMContentLoaded', function () {
        const passwordField = document.getElementById('passwordField');
        const confirmPasswordField = document.getElementById('confirmPasswordField');
        const message = document.getElementById('message');

        function validatePasswords() {
            if (passwordField.value === confirmPasswordField.value && passwordField.value !== '') {
                // Contraseñas coinciden
                passwordField.style.borderColor = 'green';
                confirmPasswordField.style.borderColor = 'green';
                message.textContent = 'Las contraseñas coinciden';
                message.style.color = 'green';
                message.style.display = 'inline';
            } else {
                // Contraseñas no coinciden
                passwordField.style.borderColor = 'red';
                confirmPasswordField.style.borderColor = 'red';
                message.textContent = 'Las contraseñas no coinciden';
                message.style.color = 'red';
                message.style.display = 'inline';
            }
        }

        passwordField.addEventListener('input', validatePasswords);
        confirmPasswordField.addEventListener('input', validatePasswords);
    });</script>
